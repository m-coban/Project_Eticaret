@{
    ViewBag.Title = "Home Page";
}
@model IEnumerable<Project_Eticaret.MODEL.Entites.Product>

<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <div class="product_top_bar d-flex justify-content-between align-items-center">
                <div class="single_product_menu product_bar_item">
                    <h2>Sıcak Fırsatlar</h2>
                </div>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-sm-6">
                <div class="single_category_product">
                    <div class="single_category_img">
                        <img src="@item.ImagePath" alt="" style="width:255px; height:280px;">
                        @*<div class="category_social_icon">
                            <ul>
                                <li><a href="#"><i class="ti-heart"></i></a></li>
                                <li><a href="#"><i class="ti-bag"></i></a></li>
                            </ul>
                        </div>*@
                        <div class="category_product_text">
                            <a href="/Product/Detail/@item.ID"><h5>@item.Name</h5></a>
                            <p>@item.Price</p>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
        <div class="col-lg-12 text-center">
            <a href="#" class="btn_2">More Items</a>
        </div>
    </div>
</div>
